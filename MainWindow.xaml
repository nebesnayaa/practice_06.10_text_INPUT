<Window x:Class="practice_06._10_text_INPUT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_06._10_text_INPUT"
        mc:Ignorable="d"
        Title="MainWindow" Height="160" Width="450"
        WindowStartupLocation="CenterScreen" Background="#FFDAFFFE">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Поле для вводу лише тексту верхнього регістру:"
               FontSize="16" Foreground="#FF0C8A8A" FontWeight="Bold" 
               VerticalAlignment="Bottom" Margin="10"></Label>
        
        <TextBox Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20 10"
                 Width="240" Height="30" FontSize="16" BorderBrush="#FF0C8A8A" BorderThickness="2"
                 x:Name="inputTextBox" PreviewTextInput="inputTextBox_PreviewTextInput"/>
    </Grid>
</Window>
